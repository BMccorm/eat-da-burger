<header>
  <img src="../public/assets/burger-01.png" alt="burger-logo">
  <h1>Welcome to Eat Da Burger!</h1>
</header>
<div id="menuItems">
  <div id="formBox">
    <h2 id="formBoxH2">Create your own!</h2>
    <form class="create-form">

      <div class="form-group">
        {{!-- <label for="ca">Burger Name:</label> --}}
        <input type="text" id="ca" name="name" placeholder="Burger Name">
      </div>

      <div class="form-group">
        {{!-- <label for="devour">Create a Menu Item</label><br> --}}
        <input type="radio" name="devour" value="1" checked> Devour now!<br>
        <input type="radio" name="devour" value="0"> Add to menu!
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

  <div class="middleBox">
    <h2 class="middleBoxH2">Menu</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/burger-block consumed=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="middleBox">
    <h2 class="middleBoxH2">Tried and True</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger/burger-block consumed=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>