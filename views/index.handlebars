<h1>Burgers</h1>

<div id="menuItems">
  <div id="formBox">
    <h2>Create a new burger:</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devour">Create a Menu Item</label><br>
        <input type="radio" name="devour" value="1" checked> devour now!<br>
        <input type="radio" name="devour" value="0"> add to menu
      </div>

      <button type="submit">Add burger</button>
    </form>
  </div>

  <div class="middleBox">
    <h2>What would you like to order?</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/burger-block consumed=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="middleBox">
    <h2>Tried and true!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger/burger-block consumed=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>